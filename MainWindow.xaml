<Window x:Class="WpfNotifierClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpfNotifierClient="clr-namespace:WpfNotifierClient"
        Title="MainWindow" Height="354" Width="376">
    
    <Grid Margin="0,0,2,52">
        <Grid>
            <DataGrid Name="DgTrxInfo" AutoGenerateColumns="False" Margin="10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="تاریخ" Binding="{Binding TrxDate}" />
                    <DataGridTextColumn Header="شماره کارت" Binding="{Binding CardNo}" />
                    <DataGridTextColumn Header="مبلغ" Binding="{Binding Amount}" />
                </DataGrid.Columns>
                <DataGrid.RowDetailsTemplate>
                    <DataTemplate>
                        <TextBlock FlowDirection="RightToLeft" Text="{Binding Details}" Margin="10" />
                    </DataTemplate>
                </DataGrid.RowDetailsTemplate>
            </DataGrid>
            <Button Click="Reconnect_Click" Content="ارتباط مجدد"  Name="ReconnectButton" Margin="0,267,0,-41" />
        </Grid>
        
    </Grid>
</Window>
