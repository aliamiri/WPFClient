<Window x:Class="WpfNotifierClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="354" Width="525">
    <Grid Margin="0,0,2,52">
        <Button x:Name="StartStopButton" Content="a" HorizontalAlignment="Left" Margin="167,235,0,0" VerticalAlignment="Top" Width="75" Click="Start"/>
        <DataGrid Name="dgUsers" AutoGenerateColumns="False" Margin="10,10,161,109">
            <DataGrid.Columns>
                <DataGridTextColumn Header="b" Binding="{Binding Name}" />
                <DataGridTextColumn Header="c c" Binding="{Binding Birthday}" />
            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <TextBlock FlowDirection="RightToLeft" Text="{Binding Details}" Margin="10" />
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>
        <Button Content="Button" HorizontalAlignment="Left" Margin="395,222,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
